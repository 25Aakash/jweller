# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/jweller_platform?retryWrites=true&w=majority&appName=Cluster0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# SMS Configuration (smsnotify.one)
SMS_API_URL=https://smsnotify.one/SMSApi/send
SMS_USER_ID=your_sms_user_id
SMS_PASSWORD=your_sms_password
SMS_SENDER_ID=your_sender_id

# AWS Configuration (Optional for S3)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Application Configuration
APP_NAME=Jeweller Platform
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# Security
BCRYPT_ROUNDS=10
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT_MAX=3

# Gold Price API (metals.dev - IBJA rates)
METALS_DEV_API_KEY=your_metals_dev_api_key_here
